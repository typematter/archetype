{
	"name": "@typematter/archetype",
	"version": "0.0.1-next.9",
	"description": "Archetype system for validating frontmatter.",
	"private": false,
	"type": "module",
	"main": "dist/index.js",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"default": "./dist/index.js"
		},
		"./package.json": "./package.json"
	},
	"files": [
		"dist"
	],
	"packageManager": "pnpm@9.12.2",
	"scripts": {
		"build": "tsup",
		"check": "pnpm format && pnpm lint && tsc --noEmit",
		"clean": "tsup --clean",
		"dev": "vitest --watch src",
		"format": "prettier --write {src,tests}/**/*.{js,ts}",
		"lint": "eslint",
		"test": "pnpm test:unit && pnpm test:integration",
		"test:unit": "vitest --run src",
		"test:integration": "pnpm build && vitest --run tests"
	},
	"keywords": [
		"archetype",
		"frontmatter",
		"markdown",
		"typescript"
	],
	"author": {
		"email": "mhgibbons@me.com",
		"name": "Matthew Gibbons",
		"url": "https://github.com/accuser"
	},
	"license": "MIT",
	"publishConfig": {
		"@accuser:registry": "https://npm.pkg.github.com"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/accuser/archetype.git"
	},
	"bugs": {
		"url": "https://github.com/accuser/archetype/issues"
	},
	"devDependencies": {
		"@eslint/js": "^9.13.0",
		"@types/node": "^22.8.4",
		"@typescript-eslint/eslint-plugin": "^8.12.2",
		"@typescript-eslint/parser": "^8.12.2",
		"@vitest/coverage-v8": "2.1.4",
		"eslint": "^9.13.0",
		"eslint-config-prettier": "^9.1.0",
		"globals": "^15.11.0",
		"prettier": "^3.3.3",
		"tslib": "^2.8.0",
		"tsup": "^8.3.5",
		"typescript": "^5.6.3",
		"typescript-eslint": "^8.12.2",
		"vitest": "^2.1.4"
	},
	"dependencies": {
		"esm-env": "^1.1.4",
		"yaml": "^2.6.0"
	}
}
